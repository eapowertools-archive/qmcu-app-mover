{
    "version": "0.1.0",
    "windows": {
        "command": "cmd",
        "args": [
            "/C"
        ]
    },
    "osx": {
        "command": "sh",
        "args": [
            "-C"
        ]
    },
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "deploy",
            "args": ["deploy.bat"],
            "isBuildCommand": true
        },
        {
            "taskName": "copyNPMPackages",
            "args": ["copyNPMPackages.bat"]
        }
    ]
}